<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wod_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/classic_color_primary"
    >

    <LinearLayout
        android:id="@+id/wod_nakshatra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/classic_color_ascent"
        android:padding="5dp"
        >

        <!--ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/jallikattu1"
            android:layout_gravity="start|center_vertical"
            android:layout_margin="4dp"
            /-->
        <TextView
            android:id="@+id/wod_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:layout_gravity="start|center_vertical"
            android:layout_margin="4dp"
            />
        <ImageButton
            android:id="@+id/wod_update"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/reload"
            android:background="@color/classic_color_ascent"
            android:tint="@color/white"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="4dp"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:src="@drawable/shadow"
        />

    <LinearLayout
        android:id="@+id/wod_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/wod_in_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wod"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/rojuko_padam_aw_shirshika"
            />
        <TextView
            android:id="@+id/wod_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:gravity="end"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold|italic"
            android:textColor="@color/link"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </LinearLayout>

</LinearLayout>